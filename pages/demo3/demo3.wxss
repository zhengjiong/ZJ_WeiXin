/* demo3.wxss */

.demo3_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav {
  /*width: 100%; 这里不能加100%,不然右边会显示不全*/
  display: flex;
  flex-direction: row;
  background-color: #ecefec;
  padding: 20rpx;
  justify-content: space-between; /*项目在主轴上的对齐方式*/
}

.nav_title {
  width: 200rpx;
  height: 50rpx;
  margin: 4rpx;
  font-size: 28rpx;
  font-family: 微软雅黑;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #8d8f8e;
}

.nav_title_hover {
  background-color: #00b1b1;
  color: white;
}

.banner {
  width: 100%;
